<Window x:Class="PSXEmulator.UI"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PSXEmulator"
        mc:Ignorable="d"
        Title="UI" Height="450" Width="800" Background = "#363535" >
    <Grid>
        <Button Name = "PlayButton" Content="Start" HorizontalAlignment="Left" Margin="355,22,0,0" VerticalAlignment="Top" Height="38" Width="69" Click="PlayButton_Click"/>
        <ListView Name = "gameList" Margin="0,112,0,0" Background="#363535" BorderBrush = "#363535" ScrollViewer.VerticalScrollBarVisibility="Hidden">
            <ListView.ItemContainerStyle>
                <Style TargetType="ListViewItem">
                    <Setter Property="Height" Value="50" />
                    <Setter Property="Foreground" Value="White" />

                </Style>
            </ListView.ItemContainerStyle>
            
            
        </ListView>
    </Grid>
</Window>
